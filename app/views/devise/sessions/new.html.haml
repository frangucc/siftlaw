#main.wide_side
  ~ form_for resource, as: resource_name, url: session_path(resource_name), html: {class: 'basic login validate'} do |f|
    %span{style: "color: green"}= notice
    %span{style: "color: red"}= alert
    %h2 Login
    %p 
      Don't have an account?
      = link_to 'Create one', new_user_path
      to save your favorites and more! Or not listed yet? Easily build your profile and
      = link_to 'get listed', new_company_path
      today, its free!
    %ul
      %li
        %label{for: 'email'} Email
        = f.text_field :email, class: 'required'
      %li.final_full
        %label{for: 'password'} Password:
        = f.password_field :password, class: 'required'
      %li.half.left
        = link_to 'forgot password?', new_password_path(resource_name)
      %li.half.right
        = f.submit 'Sign In'
