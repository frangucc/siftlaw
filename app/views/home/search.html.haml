#main
  - if(@pro_listings.size + @free_listings.size) > 0
    %ul.featured
      - @pro_listings.each do |company|
        %li
          %ul.links
            %li= link_to 'Favorites This', favorite_company_path(company), class: 'favorite', title: 'Favorite This'
            %li= link_to 'Contact Firm', '#', class: 'contact', title: 'Contact Firm'
            %li= link_to "Firm's Website", '#', class: 'website', title: "Firm's Website"
          = link_to "<span class='wrapper'><img src='#{company.image(:medium)}' alt='pic'><h3>#{company.name}</h3><address>#{company.address}, #{company.city} #{company.state}</address><span>#{company.budget}</span><hr><span>#{company.primary_category}</span></span>".html_safe, company_path(company)
    - (@free_listings.size/4).times do |i|
      - padding = i == 0 ? '10px' : '0'
      %ul.full_list{style: "margin-top: 0; padding-top: #{padding};"}
        - 4.times do |j|
          - company = @free_listings[j + i*4]
          %li
            = link_to "<h4><span class='icon star'></span>#{company.name}</h4><img src='#{company.image}' alt='pic'><div><strong>#{company.city}</strong><span>#{company.budget}</span><span>#{company.primary_category}</span></div>".html_safe, company_path(company)
  - else
    .no_results
      %strong Sorry! No listings found.
      %p We didn't find anything for your request.
      %span.icon.scales
      
      
    
